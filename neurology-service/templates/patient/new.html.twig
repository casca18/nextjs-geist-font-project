{% extends 'base.html.twig' %}

{% block title %}Create New Patient{% endblock %}

{% block body %}
<h1>Create New Patient</h1>

<form method="post" action="{{ path('patient_new') }}">
    <label for="dossierNumber">Dossier Number:</label>
    <input type="text" id="dossierNumber" name="dossierNumber" required>

    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required>

    <label for="sociodemographicInfo">Sociodemographic Info:</label>
    <textarea id="sociodemographicInfo" name="sociodemographicInfo"></textarea>

    <label for="clinicalInfo">Clinical Info:</label>
    <textarea id="clinicalInfo" name="clinicalInfo"></textarea>

    <label for="paraclinicalInfo">Paraclinical Info:</label>
    <textarea id="paraclinicalInfo" name="paraclinicalInfo"></textarea>

    <label for="therapeuticInfo">Therapeutic Info:</label>
    <textarea id="therapeuticInfo" name="therapeuticInfo"></textarea>

    <label for="prognosticInfo">Prognostic Info:</label>
    <textarea id="prognosticInfo" name="prognosticInfo"></textarea>

    <button type="submit">Create</button>
</form>

<a href="{{ path('patient_index') }}">Back to list</a>
{% endblock %}
