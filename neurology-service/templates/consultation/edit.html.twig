{% extends 'base.html.twig' %}

{% block title %}Edit Consultation{% endblock %}

{% block body %}
<h1>Edit Consultation</h1>

<form method="post" action="{{ path('consultation_edit', {'id': consultation.id}) }}">
    <label for="doctor">Doctor:</label>
    <select id="doctor" name="doctor" required>
        {% for doctor in doctors %}
            <option value="{{ doctor.id }}" {% if doctor.id == consultation.doctor.id %}selected{% endif %}>{{ doctor.name }}</option>
        {% endfor %}
    </select>

    <label for="consultationDate">Consultation Date:</label>
    <input type="datetime-local" id="consultationDate" name="consultationDate" value="{{ consultation.consultationDate|date('Y-m-d\\TH:i') }}" required>

    <label for="consultationCount">Consultation Count:</label>
    <input type="number" id="consultationCount" name="consultationCount" min="0" value="{{ consultation.consultationCount }}" required>

    <button type="submit">Update</button>
</form>

<a href="{{ path('consultation_index') }}">Back to list</a>
{% endblock %}
