{% extends 'base.html.twig' %}

{% block title %}Welcome - Neurology Service{% endblock %}

{% block content %}
    <!-- Hero Section -->
    <div class="relative isolate overflow-hidden">
        <div class="mx-auto max-w-7xl pb-24 pt-10 sm:pb-32">
            <div class="mx-auto max-w-4xl text-center">
                <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
                    Welcome to Neurology Service
                </h1>
                <p class="mt-6 text-lg leading-8 text-gray-600">
                    A comprehensive platform for managing neurological healthcare services, patient care, and medical education.
                </p>
            </div>
        </div>
    </div>

    <!-- Features Grid -->
    <div class="mx-auto max-w-7xl mt-16">
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
            <!-- Personnel Management -->
            <div class="relative rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
                <h3 class="text-lg font-semibold leading-8 tracking-tight text-gray-900">Personnel Management</h3>
                <p class="mt-2 text-base leading-7 text-gray-600">Manage healthcare professionals and staff members efficiently.</p>
                <a href="{{ path('personnel_index') }}" class="mt-4 inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-500">
                    View Personnel
                    <svg class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>

            <!-- Patient Care -->
            <div class="relative rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
                <h3 class="text-lg font-semibold leading-8 tracking-tight text-gray-900">Patient Care</h3>
                <p class="mt-2 text-base leading-7 text-gray-600">Access and manage patient records and consultations.</p>
                <a href="{{ path('patient_index') }}" class="mt-4 inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-500">
                    View Patients
                    <svg class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>

            <!-- Medical Education -->
            <div class="relative rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
                <h3 class="text-lg font-semibold leading-8 tracking-tight text-gray-900">Medical Education</h3>
                <p class="mt-2 text-base leading-7 text-gray-600">Organize and track medical education programs and students.</p>
                <a href="{{ path('course_program_index') }}" class="mt-4 inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-500">
                    View Programs
                    <svg class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>

            <!-- Duty Schedules -->
            <div class="relative rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
                <h3 class="text-lg font-semibold leading-8 tracking-tight text-gray-900">Duty Schedules</h3>
                <p class="mt-2 text-base leading-7 text-gray-600">Manage and view staff duty schedules and rotations.</p>
                <a href="{{ path('duty_schedule_index') }}" class="mt-4 inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-500">
                    View Schedules
                    <svg class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>

            <!-- Consultations -->
            <div class="relative rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
                <h3 class="text-lg font-semibold leading-8 tracking-tight text-gray-900">Consultations</h3>
                <p class="mt-2 text-base leading-7 text-gray-600">Schedule and manage patient consultations.</p>
                <a href="{{ path('consultation_index') }}" class="mt-4 inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-500">
                    View Consultations
                    <svg class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>

            <!-- User Management -->
            <div class="relative rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
                <h3 class="text-lg font-semibold leading-8 tracking-tight text-gray-900">User Management</h3>
                <p class="mt-2 text-base leading-7 text-gray-600">Manage system users and their access rights.</p>
                <a href="{{ path('user_index') }}" class="mt-4 inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-500">
                    View Users
                    <svg class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
